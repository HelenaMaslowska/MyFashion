<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Let's create your new outfit!"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/set_title_of_outfit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:hint="Name your outfit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head"
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/eyes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:src="@tools:sample/avatars" />
        <Button
            android:id="@+id/firstNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/secondBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="140dp"
            android:layout_height="240dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/secondNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="364dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/boots" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_gif"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            />
        <Button
            android:id="@+id/saveOutfit"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:text="Save outfit" />

        <ImageView
            android:id="@+id/image_gif2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ProgressBar1"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>

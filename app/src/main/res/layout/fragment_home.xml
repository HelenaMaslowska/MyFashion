<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/set_title_of_outfit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Name your outfit!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head"
            android:layout_width="364dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/eyes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/firstBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/firstNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/secondBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Back" />

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="140dp"
            android:layout_height="240dp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/secondNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:text="Next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="364dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/boots" />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveOutfit"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:text="Save outfit" />

    </LinearLayout>
</LinearLayout>